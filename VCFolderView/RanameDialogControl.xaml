<UserControl x:Class="VCFolderView.RanameDialogControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vsshell="clr-namespace:Microsoft.VisualStudio.Shell;assembly=Microsoft.VisualStudio.Shell.15.0"
             Background="{DynamicResource {x:Static vsshell:VsBrushes.WindowKey}}"
             Foreground="{DynamicResource {x:Static vsshell:VsBrushes.WindowTextKey}}"
             mc:Ignorable="d"
             Name="RenameDialog">
    <Grid>
        <StackPanel Orientation="Vertical" Margin="12">
            <TextBox x:Name="NameText" Margin="0,0,0,12" HorizontalAlignment="Stretch" FontSize="16"></TextBox>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,0" HorizontalAlignment="Center">
                <Button Content="OK" Click="OKButton_Click" Width="100" Height="30" Name="OKButton" Margin="0,0,12,0"/>
                <Button Content="Cancel" Click="CancelButton_Click" Width="100" Height="30" Name="CancelButton"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
